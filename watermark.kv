#:kivy 2.1.0


<MainPage>:
    cols:1
    rows:4


    Button:
        size_hint: (1, 0.1)
        text: 'Load image'
        on_release: root.show_load(0)

    Accordion:
        size_hint: (1, 0.3)
        orientation: 'vertical'

        AccordionItem:
            title: "Use custom image as a watermark"
            Button:
                text: 'Load your watermark image'
                on_release: root.show_load(1)
        AccordionItem:
            title: "Use custom text as a watermark"
            BoxLayout:
                orientation: "vertical"

                TextInput:
                    id: wm_text_line
                    focus: True
                    hint_text: "Input something here"
                    size_hint: (1, 0.3)
                    multiline: False

                BoxLayout:
                    size_hint: (1, 0.4)
                    orientation: "vertical"
                    Slider:
                        id: opacity_sl
                        range: (0, 255)
                        step: 8
                        value: 128
                        value_track: True
                        value_track_color: [0, 0, 1, 1]
                    Label:
                        text: str(round(opacity_sl.value_normalized*100)) + '% (opacity)'
                Button:
                    size_hint: (1, 0.3)
                    text: 'Submit'
                    on_press: root.text_wm(wm_text_line.text, opacity_sl.value)
    FloatLayout:
        size_hint: (1, 0.5)

        ImageBtn:
            id: main_img
            source: 'okacho.jpg'
            on_press: root.img_click(self.norm_image_size, self.size, self.pos)
            size_hint: (1, 1)
            pos_hint: {"x": 0, 'y': 0}
        Label:
            id: text_wm
            size_hint: (0.8, self.font_size/main_img.size[1])
            text_size: self.size
            strip: True
            shorten: True
            shorten_from: 'right'
            halign: 'left'
            valign: 'bottom'
        Image:
            id: img_wm
            opacity: 0
            size_hint: (root.is_mult, root.is_mult)


    Button:
        size_hint: (1, 0.1)
        text: 'Save result'
        on_release: root.show_save()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            multiselect: True
            filters: ['*.png','*.jpg']
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(root.a_type, filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            path: '.'
            on_selection: text_input.text = self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
            focus: True
            text: "result.jpg"
        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)